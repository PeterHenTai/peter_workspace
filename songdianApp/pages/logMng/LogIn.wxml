<!--pages/logMng/LogIn.wxml-->
<view class="page" data-weui-theme="{{theme}}">
  <image src="../../images/app_logo.png"></image>
	<view class="weui-form">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells__title">输入账号密码</view>
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">账号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写账号" bindinput="bindID" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">
                            <label class="weui-label">密码</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写密码" password="true"  bindinput="bindPassword" placeholder-class="weui-input__placeholder" />
						</view>
					</view>
				</view>
			</view>
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary" bindtap="ok_and_login">确定</a>
		</view>
	</view>

	<view class="fadeIn {{hideToast ? 'fadeOut' : ''}}" wx:if="{{toast}}">
		<view class="weui-mask_transparent"></view>
		<view class="weui-toast">
			<i class="weui-icon-success-no-circle weui-icon_toast"></i>
			<view class="weui-toast__content">登录成功！</view>
		</view>
	</view>

	<view class="fadeIn {{hideWarnToast ? 'fadeOut' : ''}}" wx:if="{{warnToast}}">
		<view class="weui-mask_transparent"></view>
		<view class="weui-toast">
			<i class="weui-icon-warn weui-icon_toast"></i>
			<view class="weui-toast__content">登录失败！请确认账号或密码是否正确</view>
		</view>
	</view>

</view>

