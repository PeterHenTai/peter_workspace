/* pages/training/training.wxss */
/**words_index.wxss**/
.word_index_container {
  display: flex;
  flex-direction: column;
  justify-content: space-around; 
  flex-wrap: nowrap;
  align-items:center;
  height: 100vh;
}

.word_index_tabs{
  width: 100%;
}

.calendar{
display: block;
width: 100%;
}

.testIcon{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  align-items: center;
}

.testIcon image{
  width: 500rpx;
  height: 500rpx;
}

.word_index_circle{
  display: block;
  width: 100%;
  text-align:center;
  align-items:center;
  position: fixed;
  width: 100%;
  top: 10%;
}

.word_index_task{
  display: flex;
  text-align:center;
  width: 100%;
  flex-direction: row;
  justify-content: space-around;
}
.status{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color:var(--main-color);
  font-weight: bold;
}
.word_index_start_and_status{
  text-align:center;
  align-items:center;
}

.add_start_btn{
  width: 100%;
  /* bottom 是根据 tab-bar 的高度为70px 设置的 */
}

.add_start_btn button{
  width: 85%;
  border: 2px solid var(--main-color);
  color: var(--weui-FG-1)
}

.word_start_study{
  text-align:center;
  align-items:center;
  border-radius: 98rpx;
}

.word_start_study::after{
  border-radius: 98rpx;
}