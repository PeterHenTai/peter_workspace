<!--pages/training/SelectQues.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-flex">
		<view class="weui-flex__item">
			<view class="placeholder">总题目数/已答题目: {{totalQues}}/{{currentQues}}  得分：{{score}}
			</view>
		</view>
	</view>
	<view class="weui-form">
        <view class="weui-form__text-area">
            {{question}}
        </view>
        <view class="weui-form__control-area">
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells weui-cells_radio">
                    <radio-group class="radio-group" bindchange="radioChange">
                        <label class="weui-cell weui-cell_active weui-check__label" wx:for="{{items}}" wx:key="name">
                            <view class="weui-cell__bd">
                                <view>{{item.value}}</view>
                            </view>
                            <view class="weui-cell__ft">
                                <radio
                                    class="weui-check"
                                    value="{{item.name}}"
                                    checked="{{item.checked}}"
                                />
                                <i class="weui-icon-checked"></i>
                            </view>
                        </label>
                    </radio-group>
                </view>
            </view>
        </view>
		<view class="weui-form__opr-area">
		  <a wx:if="{{ok_or_next}}" class="weui-btn weui-btn_primary" bindtap="ok_btn">确定</a>
		  <a wx:if="{{!ok_or_next}}" class="weui-btn weui-btn_primary" bindtap="next_btn">下一个</a>
          <view class="weui-flex">
            <view class="weui-flex__item">
              <view wx:if="{{is_true}}" style="color:green"> 回答正确！</view>
              <view wx:if="{{is_false}}" style="color:red"> 回答错误！正确答案：{{ans}}</view>
            </view>
	      </view>
		</view>
    </view>

    <view class="fadeIn" wx:if="{{showEnd}}">
        <view class="weui-mask"></view>
        <view class="weui-dialog weui-skin_android">
            <view class="weui-dialog__hd"><strong class="weui-dialog__title">完成提示</strong></view>
            <view class="weui-dialog__bd">
                恭喜！您已完成答题！得分：{{score}}
            </view>
            <view class="weui-dialog__ft">
                <a class="weui-dialog__btn weui-dialog__btn_default" bindtap="quitTest">退出</a>
            </view>
        </view>
    </view>

</view>

