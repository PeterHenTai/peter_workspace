<!--pages/training/JudgeQues.wxml-->
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-flex">
		<view class="weui-flex__item">
			<view class="placeholder">总题目数/已答题目: {{totalQues}}/{{currentQues}}  得分：{{score}}
			</view>
		</view>
	</view>
	<view class="weui-form">
		<view class="weui-form__text-area">
			{{question}}
		</view>
    <view class="weui-form__control-area"></view>
    <view class="weui-form__opr-area">
      <view class="weui-flex">
        <view class="weui-flex__item1">
          <a class="weui-btn weui-btn_mini weui-btn_primary" bindtap="btn_right">正确</a>
        </view>
        <view class="weui-flex__item2">
          <a class="weui-btn weui-btn_mini weui-btn_warn" bindtap="btn_wrong">错误</a>
        </view>
      </view>
      <view class="weui-flex">
        <view class="weui-flex__item3" wx:if="{{btn_next_valid}}">
          <a class="weui-btn weui-btn_mini weui-btn_primary" bindtap="btn_next">下一个</a>
          <view wx:if="{{is_true}}" style="color:green"> 回答正确！</view>
          <view wx:if="{{is_false}}" style="color:red"> 回答错误！ </view>
        </view>
      </view>
		  </view>
	</view>
  <view class="fadeIn" wx:if="{{showEnd}}">
      <view class="weui-mask"></view>
      <view class="weui-dialog weui-skin_android">
          <view class="weui-dialog__hd"><strong class="weui-dialog__title">完成提示</strong></view>
          <view class="weui-dialog__bd">
              恭喜！您已完成答题！得分：{{score}}
          </view>
          <view class="weui-dialog__ft">
              <a class="weui-dialog__btn weui-dialog__btn_default" bindtap="quitTest">退出</a>
          </view>
      </view>
  </view>
</view>



