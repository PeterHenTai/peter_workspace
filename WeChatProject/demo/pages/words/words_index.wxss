/**words_index.wxss**/
.word_index_container {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  align-items:center;

}

.word_index_tabs{
  width: 100%;
}

.word_index_circle{
  text-align:center;
  align-items:center;
  position: fixed;
  width: 100%;
  top: 10%;
}

.word_index_task{
  text-align:center;
  align-items:center;
  position: fixed;
  width: 80%;
  bottom: 28%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.status{
  display: flex;
  flex-direction: column;
  font-size: 18rpx;
}
.word_index_start_and_status{
  
  text-align:center;
  align-items:center;
}

.add_start_btn{
  width: 85%;
  position: fixed;
  bottom:  15%;
  /* bottom 是根据 tab-bar 的高度为70px 设置的 */
}
.word_start_study{
  text-align:center;
  align-items:center;
  border-radius: 98rpx;
}

.word_start_study::after{
  border-radius: 98rpx;
}